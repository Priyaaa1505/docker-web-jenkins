pipeline {
    agent any
    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/YOUR_USERNAME/YOUR_REPO_NAME.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t my-web-image .'
            }
        }
        stage('Run Docker Container') {
            steps {
                sh 'docker run -d -p 8080:80 --name web-container my-web-image'
            }
        }
    }
}
